<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "← Back to #{@project.name}", project_path(@project.slug), class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit Project</h1>

  <%= form_with model: @project, url: project_path(@project.slug), method: :patch, class: "space-y-6" do |f| %>
    <% if @project.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <h3 class="text-sm font-medium text-red-800 mb-2">
          <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
        </h3>
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          autofocus: true %>
    </div>

    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Project Slug</h3>
      <p class="text-sm text-gray-600 mb-2">
        Current: <code class="font-mono bg-white px-2 py-1 rounded border border-gray-300"><%= @project.slug %></code>
      </p>
      <p class="text-xs text-gray-500">The slug is automatically generated from the project name and cannot be changed directly.</p>
    </div>

    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Public Key</h3>
      <p class="text-sm text-gray-600 mb-2">
        <code class="font-mono bg-white px-2 py-1 rounded border border-gray-300"><%= @project.public_key %></code>
      </p>
      <p class="text-xs text-gray-500">Used in the DSN. Cannot be changed (would break existing integrations).</p>
    </div>

    <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
      <h3 class="text-sm font-medium text-blue-900 mb-2">DSN (Data Source Name)</h3>
      <div class="flex items-center gap-2">
        <code class="flex-1 bg-white px-3 py-2 rounded border border-blue-300 text-sm font-mono break-all">
          <%= @project.dsn %>
        </code>
        <button type="button"
                data-controller="clipboard"
                data-action="click->clipboard#copy"
                data-clipboard-text-value="<%= @project.dsn %>"
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg whitespace-nowrap">
          Copy
        </button>
      </div>
      <p class="text-xs text-blue-700 mt-2">Use this DSN in your application's Sentry configuration.</p>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Update Project", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg" %>
      <%= link_to "Cancel", project_path(@project.slug), class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>
