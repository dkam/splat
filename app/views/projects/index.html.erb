<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg" %>
  </div>

  <% if @projects.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @projects.each do |project| %>
        <%= link_to project_path(project.slug), class: "block" do %>
          <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= project.name %></h2>
            <p class="text-sm text-gray-500 mb-4">/<%= project.slug %></p>

            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Open Issues:</span>
                <span class="font-medium text-red-600"><%= project.issues.open.count %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Total Events:</span>
                <span class="font-medium"><%= project.events.count %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Last Activity:</span>
                <span class="font-medium">
                  <% if project.events.any? %>
                    <%= time_ago_in_words(project.events.maximum(:timestamp)) %> ago
                  <% else %>
                    Never
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <h3 class="text-lg font-medium text-gray-900 mb-2">No projects yet</h3>
      <p class="text-gray-600 mb-4">Create your first project to start tracking errors</p>
      <%= link_to "Create Project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg inline-block" %>
    </div>
  <% end %>
</div>
