<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "‚Üê Performance", project_transactions_path(@project.slug), class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">üêå Slow Transactions</h1>
  </div>

  <!-- Filters -->
  <div class="mb-6 bg-white rounded-lg shadow p-4 border border-gray-200">
    <%= form_with url: slow_project_transactions_path(@project.slug), method: :get, class: "flex flex-wrap gap-4" do |f| %>
      <div class="flex-1 min-w-[150px]">
        <%= f.label :time_range, "Time Range", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :time_range,
            options_for_select([["Last Hour", "1h"], ["Last 6 Hours", "6h"], ["Last 24 Hours", "24h"], ["Last 7 Days", "7d"]], @time_range),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <%= f.label :threshold, "Threshold (ms)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :threshold,
            value: @threshold,
            step: 100,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex items-end">
        <%= f.submit "Filter", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg" %>
      </div>
    <% end %>
  </div>

  <div class="mb-4 text-sm text-gray-600">
    Showing transactions slower than <%= format_duration(@threshold) %>
  </div>

  <!-- Slow Transactions Table -->
  <% if @transactions.any? %>
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaction</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">DB Time</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">View Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @transactions.each do |transaction| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <%= link_to project_transaction_path(@project.slug, transaction),
                    class: "text-blue-600 hover:text-blue-800 font-medium" do %>
                  <%= transaction.transaction_name %>
                <% end %>
                <% if transaction.environment.present? %>
                  <span class="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">
                    <%= transaction.environment %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if transaction.http_method.present? %>
                  <span class="font-mono text-sm text-gray-600"><%= transaction.http_method %></span>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if transaction.http_status.present? %>
                  <span class="px-2 py-1 text-xs font-medium rounded <%= transaction.http_status.to_i >= 500 ? 'bg-red-100 text-red-800' : transaction.http_status.to_i >= 400 ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                    <%= transaction.http_status %>
                  </span>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <span class="font-bold text-red-600">
                  <%= format_duration(transaction.duration) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <% if transaction.db_time.present? %>
                  <%= format_duration(transaction.db_time) %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <% if transaction.view_time.present? %>
                  <%= format_duration(transaction.view_time) %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= transaction.timestamp.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="mt-6 flex justify-center">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center border border-gray-200">
      <div class="text-6xl mb-4">üéâ</div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No slow transactions found</h3>
      <p class="text-gray-600">All transactions are performing well!</p>
    </div>
  <% end %>
</div>
