<%= turbo_stream.prepend "events-list" do %>
  <%= render 'events/event_row', event: event, project: event.issue.project %>
<% end %>

<%= turbo_stream.update "events-count" do %>
  <%= Event.where(issue_id: event.issue_id).count %>
<% end %>

<%= turbo_stream.update "issue-count" do %>
  <%= event.issue.count %>
<% end %>

<%= turbo_stream.replace "last-seen" do %>
  <div id="last-seen" class="bg-white rounded-lg shadow p-6 border border-gray-200">
    <div class="text-sm text-gray-600 mb-1">Last Seen</div>
    <div class="text-lg font-semibold text-gray-900">
      <%= time_ago_in_words(event.issue.last_seen) %> ago
      <div class="text-sm text-gray-500 mt-1"><%= event.issue.last_seen.strftime("%Y-%m-%d %H:%M:%S") %></div>
    </div>
  </div>
<% end %>

<% if event.issue.was_reopened? %>
  <%= turbo_stream.replace "issue-status" do %>
    <span class="px-3 py-1 text-sm font-medium bg-red-100 text-red-800 rounded">Open</span>
  <% end %>

  <%= turbo_stream.replace "issue-actions" do %>
    <div id="issue-actions" class="flex gap-2">
      <%= button_to "Resolve", resolve_project_issue_path(event.issue.project.slug, event.issue),
          method: :patch,
          class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg",
          form: { data: { turbo: true } } %>
      <%= button_to "Ignore", ignore_project_issue_path(event.issue.project.slug, event.issue),
          method: :patch,
          class: "bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg",
          form: { data: { turbo: true } } %>
    </div>
  <% end %>
<% end %>

<%= turbo_stream.prepend "flash-notifications" do %>
  <div class="animate-pulse" data-controller="flash" data-flash-timeout-value="5000">
    <div class="bg-blue-50 border-l-4 border-blue-400 rounded-lg p-4 shadow-lg max-w-sm">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-blue-800">New event received!</p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" data-action="click->flash#remove" class="inline-flex bg-blue-50 rounded-md p-1.5 text-blue-500 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-blue-50 focus:ring-blue-600">
              <span class="sr-only">Dismiss</span>
              <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>